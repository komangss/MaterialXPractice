<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomSheet.ListBottomSheetActivity">

    <Button
        android:layout_centerInParent="true"
        android:id="@+id/btn_to_sheet_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to bottom sheet list" />

    <Button
        android:id="@+id/btn_to_sheet_float"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/btn_to_sheet_list"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to bottom sheet floating" />
</RelativeLayout>